<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zwyl.myhomework">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.zwyl.myhomework.App"
        android:allowBackup="true"
        android:icon="@mipmap/textbook"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.zwyl.myhomework.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path" />
        </provider>

        <activity
            android:name="com.zwyl.myhomework.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zwyl.myhomework.main.TextbookActivity"
            android:launchMode="singleTask" />
        <activity android:name="com.zwyl.myhomework.viewstate.treelist.MainActivity" />
        <activity android:name="com.zwyl.myhomework.main.details.TextDetaileActivity" />
        <activity android:name="com.zwyl.myhomework.main.subject.SubjectActivity" />
        <activity android:name="com.zwyl.myhomework.main.subject.SubjectActivityFile" />
        <activity android:name="com.zwyl.myhomework.main.subject.SubjectActivityWrite" />
        <activity android:name=".main.PlayActivity"/>
    </application>

</manifest>