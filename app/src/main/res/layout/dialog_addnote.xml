<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="900dp"
        android:layout_height="67dp"
        android:background="@drawable/drawable_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_title"
            style="@style/text_18_green"
            android:layout_centerHorizontal="true"
            android:text="加入原因"
            android:textSize="@dimen/textsize_24sp" />

        <ImageView
            android:id="@+id/tv_dialog_close"
            android:layout_width="@dimen/common_margin_18dp"
            android:layout_height="@dimen/common_margin_18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin_15dp"
            android:background="@mipmap/close" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="860dp"
        android:layout_height="469dp"
        android:layout_margin="@dimen/common_margin_5dp"
        android:background="@drawable/bg_frame_item"
        android:layout_gravity="center_horizontal"
        android:padding="0.5dp">

        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_margin_5dp"
            android:gravity="left|top"
            android:background="@null"
            android:padding="@dimen/common_margin_5dp" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_10dp">

        <TextView
            android:id="@+id/tv_dialog_cancle"
            android:layout_width="96dp"
            android:layout_height="@dimen/common_margin_37dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="300dp"
            android:background="@drawable/drawable_green_bg"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/textsize_18sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_dialog_save"
            android:layout_width="96dp"
            android:layout_height="@dimen/common_margin_37dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="300dp"
            android:background="@drawable/drawable_green_bg"
            android:gravity="center"
            android:text="保存"
            android:textSize="@dimen/textsize_18sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>